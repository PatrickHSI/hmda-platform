pipeline {
  agent any

  tools {nodejs "node"}

    stages {
        stage('Build') {
            steps {
                echo 'Building..'
                env.NODEJS_HOME = "${tool nodejs}"
                env.PATH="${env.NODEJS_HOME}:${env.PATH}"
                echo ${env.PATH}
                sh 'node -version'
            }
        }
        stage('Test') {
            steps {
                echo 'Testing..'
            }
        }
        stage('Deploy') {
            steps {
                echo 'Deploying....'
            }
        }
    }
}