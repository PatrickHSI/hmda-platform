pipeline {
  agent any

  tools {nodejs "node"}

    stages {
        stage('Build') {
            steps {
                echo 'Building..'
                   script {
              def nodeHome = tool 'nodejs'
                env.PATH="${env.PATH}:${nodeHome}/bin"
                }
                sh 'npm -version'
            }
        }
        stage('Test') {
            steps {
                echo 'Testing..'
            }
        }
        stage('Deploy') {
            steps {
                echo 'Deploying....'
            }
        }
    }
}