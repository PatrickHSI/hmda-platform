#!/bin/bash
pipeline {
  agent any


  tools {nodejs "node"}

    stages {
        stage('Build') {
            steps {
                echo 'Building..'
                      script {
                         def nodeHome = tool 'node'
                         env.PATH="${env.PATH}:${nodeHome}/bin"
                                }
                                 echo "${env.NODE_HOME}"
                                 sh "npm -version"
            }
        }
        stage('Test') {
            steps {
                echo 'Testing..'
            }
        }
        stage('Deploy') {
            steps {
                echo 'Deploying....'
            }
        }
    }
}