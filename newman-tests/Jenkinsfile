#!/bin/bash
pipeline {
  agent any


  tools {nodejs "node"}

    stages {
        stage('Build') {
            steps {
                echo 'Building..'
                      script {
                                    env.NODE_HOME="${tool 'node'}"
                                      env.PATH="${env.NODE_HOME}:${env.PATH}"
                                }
                               sh "\"${env.NODE_HOME}/bin/node\"\\ -v"
                               sh "\"${env.NODE_HOME}\"\\npm -v"
            }
        }
        stage('Test') {
            steps {
                echo 'Testing..'
            }
        }
        stage('Deploy') {
            steps {
                echo 'Deploying....'
            }
        }
    }
}