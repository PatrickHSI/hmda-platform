#!/bin/bash
pipeline {
  agent any


  tools {nodejs "node"}

    stages {
        stage('Build') {
            steps {
                echo 'Building..'
                      script {
                                    env.NODE_HOME="${tool 'node'}"
                                      env.PATH="${env.NODE_HOME}/bin:${env.PATH}"
                                }
                                 sh " alias node= "${env.NODE_HOME}/bin""
                                 echo "${env.NODE_HOME}"
                                 sh "npm -version"
            }
        }
        stage('Test') {
            steps {
                echo 'Testing..'
            }
        }
        stage('Deploy') {
            steps {
                echo 'Deploying....'
            }
        }
    }
}