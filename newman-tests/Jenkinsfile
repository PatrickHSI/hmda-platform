pipeline {
  agent any


  tools {nodejs "node"}

    stages {
        stage('Build') {
            steps {
                echo 'Building..'
                      script {
                                    env.NODE_HOME="${tool 'node'}"
                                      env.PATH="${env.NODE_HOME}/bin:${env.PATH}"
                                }
            }
        }
        stage('Test') {
            steps {
                echo 'Testing..'
            }
        }
        stage('Deploy') {
            steps {
                echo 'Deploying....'
            }
        }
    }
}