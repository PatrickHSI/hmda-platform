#!/bin/bash
pipeline {
  agent any


  tools {nodejs "node"}

    stages {
        stage('Build') {
            steps {
                echo 'Building..'
                      script {
                                    env.NODE_HOME="${tool 'node'}"
                                     env.PATH="${env.NODE_HOME}:${env.PATH}"
                                     ls  env.NODE_HOME
                                }
 
            }
        }
        stage('Test') {
            steps {
                echo 'Testing..'
            }
        }
        stage('Deploy') {
            steps {
                echo 'Deploying....'
            }
        }
    }
}