pipeline {
  agent any

  tools {nodejs "node"}

    stages {
        stage('Build') {
            steps {
                echo 'Building..'
                   script {
              def nodeHome = tool 'node'
                env.PATH="${env.PATH}:${nodeHome}/bin"
                println(env.PATH)
                npm -version
                }
            }
        }
        stage('Test') {
            steps {
                echo 'Testing..'
            }
        }
        stage('Deploy') {
            steps {
                echo 'Deploying....'
            }
        }
    }
}