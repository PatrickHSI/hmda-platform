#!groovy
pipeline {
  agent any

    stages {
        stage('Build') {
            steps {
             echo 'Building..'
             sh '''
              NODE_HOME="${tool 'node'}"
              PATH="${NODE_HOME}/bin:${PATH}"
             npm -v'''

            }
        }
        stage('Test') {
            steps {
                echo 'Testing..'
            }
        }
        stage('Deploy') {
            steps {
                echo 'Deploying....'
            }
        }
    }
}