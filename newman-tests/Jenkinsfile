#!/bin/bash
pipeline {
  agent any


  tools {nodejs "node"}

    stages {
        stage('Build') {
            steps {
                echo 'Building..'
                      script {
                       def nodeHome = tool 'node'

                                }
                                  sh "\"${nodeHome}\"\\node -v"
                                  sh "\"${nodeHome}\"\\npm -v"
            }
        }
        stage('Test') {
            steps {
                echo 'Testing..'
            }
        }
        stage('Deploy') {
            steps {
                echo 'Deploying....'
            }
        }
    }
}